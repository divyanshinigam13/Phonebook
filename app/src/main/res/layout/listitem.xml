<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divyanshi Nigam"
        android:textSize="23dp"
        android:id="@+id/name"
      android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#FF1334E3"
        android:layout_toRightOf="@+id/person"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:textColor="#FF1334E3"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/person"
       android:fontFamily="sans-serif-condensed"
        android:text="8931054544"
        android:textSize="13dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:layout_alignParentStart="true"
        android:id="@+id/person"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:layout_alignParentEnd="true"
        android:id="@+id/call"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    </RelativeLayout>

</androidx.cardview.widget.CardView>